@model IEnumerable<NZWalks.UI.Models.DTO.RegionDTO>

<h2>Regions</h2>

@if (!Model.Any())
{
    <p>No regions found.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var region in Model)
            {
                <tr>
                    <td>@region.Code</td>
                    <td>@region.Name</td>
                    <td><img src="@region.RegionImageUrl" width="100" /></td>
                </tr>
            }
        </tbody>
    </table>
}

@if (Context.Request.Cookies["JWTToken"] != null)
{
    <a class="btn btn-primary" asp-action="Add">Add Region</a>
}
